@page
@model TestSENG.Pages.Accounts.New_DepositModel
@{
    ViewData["Title"] = "New Deposit";
}
<h1>New Deposit</h1>

<hr />
<div>
    <h4>Customer Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>

    </dl>
    <hr />
</div>
<div>
    <h4>Account Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.IBAN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.IBAN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Balance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Balance)
        </dd>

    </dl>
    <hr />
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post" name="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Deposit.Amount" class="control-label"></label>

                <input asp-for="Deposit.Amount"  class="form-control" />
                <span asp-validation-for="Deposit.Amount" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <input type="hidden" asp-for="Deposit.ID_Account" value="@Model.idAccount" />
                <input type="hidden" asp-for="Account.Balance" id="old_balance" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@Model.idAccount
<div>

    <a asp-page="./Deposit" asp-route-id="@Model.idAccount">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
