@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model TestSENG.Pages.Accounts.New_TransferMoneyModel

   

    <h1>New TransferMoney</h1>

    <hr />
    <div>
        <h4>Customer Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.Telephone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Telephone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Address)
            </dd>

        </dl>
        <hr />
    </div>
    <div>
        <h4>Account Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.IBAN)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.IBAN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Balance)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Balance)
            </dd>

        </dl>
        <hr />
    </div>

    <div class="row">
        <h4>Receiver's Account Details</h4>
        <hr />
        <div class="col-md-4">
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TransferMoney.ID_Account_Receive" class="control-label"></label>
                    <input asp-for="TransferMoney.ID_Account_Receive" class="form-control" />

                    <span asp-validation-for="TransferMoney.ID_Account_Receive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TransferMoney.Amount" class="control-label"></label>
                    <input asp-for="TransferMoney.Amount" id="amount" class="form-control" />
                    <span asp-validation-for="TransferMoney.Amount" class="text-danger"></span>
                </div>
                

                <div class="form-group">
                    <input type="hidden" asp-for="TransferMoney.ID_Account" value="@Model.idAccount" />
                    <input type="hidden" asp-for="Account.Balance" id="old_balance" value="@Model.Old_Balance" />
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./TransferMoney" asp-route-id="@Model.idAccount">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
