@page
@model TestSENG.Pages.Accounts.Account_SettingModel
@{
    ViewData["Title"] = "Account Settings";
}
<h1>Account Settings</h1>

<p>
    <a asp-page="./New_Deposit" asp-route-id="@Model.idAccount" class="btn btn-primary"> New Deposit</a>
    <a asp-page="./New_Withdraw" asp-route-id="@Model.idAccount" class="btn btn-primary"> New Withdraw</a>
    <a asp-page="./New_TransferMoney" asp-route-id="@Model.idAccount" class="btn btn-primary"> New Transfer Money</a>
</p>
<hr />

<div>
    <h4>Customer Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>

    </dl>
    <hr />
</div>
<div>
    <h4>Account Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.IBAN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.IBAN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Balance)
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Account.Balance)
        </dd>

    </dl>
    <hr />
</div>

<table class="table">
    <thead>
        <tr>
            <th>DateIssue</th>
            <th>Amount</th>
            <th>Balance</th>
            <th>status</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.AccountData.Log_Account)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateIssue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>

                    @if ((item.status) == 1)
                        {
                        <span style="color: green">Deposit</span>
                        <iconify-icon icon="icon-park:deposit" rotate="270deg"></iconify-icon>

                        }
                        else if ((item.status) == 2)
                        {
                        <span style="color: red">Withdraw</span>
                        <iconify-icon icon="bx:money-withdraw"></iconify-icon> }
                        else if ((item.status) == 3)
                        {
                      <span style="color: red">Transfer Money</span>
                       <iconify-icon icon="fa6-solid:money-bill-transfer"></iconify-icon>
                        }
                        else
                        {
                     <span style="color: orange">Get Money</span>
                     <iconify-icon icon="carbon:money"></iconify-icon>
                        }

                </td>


            </tr>
        }



    </tbody>
</table>
<div>
    <a asp-page="./Index" asp-route-id="@Model.idCustomer">Back to Bank Account</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="https://code.iconify.design/iconify-icon/1.0.1/iconify-icon.min.js"></script>
}

